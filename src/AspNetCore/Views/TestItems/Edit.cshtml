@model AspNetCore.Models.TestItem

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>TestItem</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="TestItemId" />
        <div class="form-group">
            <label asp-for="Order" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Order" class="form-control" />
                <span asp-validation-for="Order" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Question" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="Question" class="form-control"></textarea>
                <span asp-validation-for="Question" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Remark" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Remark" class="form-control" />
                <span class="text-info">В каком формате вводить ответ, например, Ответ - число</span>
                <span asp-validation-for="Remark" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Answer" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Answer" class="form-control" />
                <span asp-validation-for="Answer" class="text-danger" />
            </div>
        </div>
        
        <div class="form-group">
            <label asp-for="TestPackageId" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="TestPackageId" class="form-control" asp-items="ViewBag.TestPackageId"></select>
                <span asp-validation-for="TestPackageId" class="text-danger" />
            </div>
        </div>
        @*<div class="form-group">
            <label asp-for="TestType" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="TestType" class="form-control" asp-items="ViewBag.TestTypes"></select>
                <span asp-validation-for="TestType" class="text-danger" />
            </div>
        </div>*@
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
